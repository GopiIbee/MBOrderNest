<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhiteGraytra"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_light_2"

        android:orientation="vertical">

        <TextView
            android:id="@+id/pay_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/grey_green_light2"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_light_2"
            android:orientation="horizontal"

            android:padding="10dp">

            <TextView
                android:id="@+id/pin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/pin_tv_dummy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="****"
                android:textColor="@color/grey_dark_fezz"
                android:textSize="30dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"

        android:verticalSpacing="10dp"
        android:numColumns="3"
        android:paddingLeft="15dp"
        android:paddingTop="30dp"
        android:paddingRight="15dp"
        android:paddingBottom="30dp" />

</LinearLayout>